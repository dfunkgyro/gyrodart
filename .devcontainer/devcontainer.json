{
  "name": "Flutter Development (Alpine + Emulator)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "ms-androidtools.vscode-android",
        "ms-vscode.js-debug-nightly",
        "ms-vscode.cpptools",
        "ms-python.python",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "dart.flutterSdkPath": "/usr/local/flutter",
        "dart.sdkPath": "/usr/local/flutter/bin/cache/dart-sdk",
        "editor.formatOnSave": true
      }
    }
  },
  "forwardPorts": [8080, 3000, 5554, 5555],
  "postCreateCommand": "flutter doctor -v",
  "mounts": [
    "source=/var/lib/android,target=/usr/local/android-sdk,type=volume",
    "source=/var/lib/flutter_pub,target=/home/vscode/.pub-cache,type=volume"
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  }
}
